- content_for(:head) do
  != stylesheet_tag "howto"
- content_for(:scripts) do
  != javascript_tag "howto"
  :javascript
    mixpanel.track("How To");

.container
  .header
    %ul.nav.nav-pills.pull-right
      %li
        %a{:href => "#"} Home
      %li.active
        %a{:href => "/how-to-setup-self-updating-mac-app-in-5-minutes"} How to
      %li
        %a{:href => "mailto:pawelniewiadomski@me.com"} Contact
    %h3.text-muted=settings.appname
  %hr/
  %div
    %carousel
      %slide
        %img{:src => "https://s3.amazonaws.com/appcasts-assets/static/1/how-to/drag-drop-to-frameworks.jpeg"}
        .carousel-caption
          %h4
            Download
            %a{:href => "https://s3.amazonaws.com/appcasts-assets/static/1/Sparkle.framework.zip"} Sparkle
          %p Unzip the file and drag and drop Sparkle framework to your project
      %slide
        %img{:src => "https://s3.amazonaws.com/appcasts-assets/static/1/how-to/set-feed-url.jpeg"}
        .carousel-caption
          %h4 Edit Info.plist
          %p Add Sparkle setting, remember to use your own SUFeedUrl
      %slide
        %img{:src => "https://s3.amazonaws.com/appcasts-assets/static/1/how-to/copy-frameworks.jpeg"}
        .carousel-caption
          %h4 Add build phase to copy framework files
          %p Select your target and use Editor -> Add Build Phase -> Add Copy Files Build Phase
      %slide
        %img{:src => "https://s3.amazonaws.com/appcasts-assets/static/1/how-to/set-build-versions.jpeg"}
        .carousel-caption
          %h4 Add build phase to run a script
          %p
            %a{:href => "https://s3.amazonaws.com/appcasts-assets/static/1/xcode-git-version.sh"} Download a script
            and place it in your project's root directory
      %slide
        %img{:src => "https://s3.amazonaws.com/appcasts-assets/static/1/how-to/sends-system-profile.jpeg"}
        .carousel-caption
          %h4 Enable sending system profile (optional)
          %p So we'll track what OS X version and hardware your users use
      %slide
        %i.icon-check
        .carousel-caption
          %h4 You're done!
          %p From now on your app will self-update
  %hr/
  .footer
    %p &copy; Pawel Niewiadomski 2013
