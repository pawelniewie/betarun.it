- content_for(:head) do
  != stylesheet_tag "dashboard"

  %link{:href => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/css/jquery.fileupload-ui.css", :rel => "stylesheet", :type => "text/css"}/

- content_for(:scripts) do
  %script{:src => "//cdn.jsdelivr.net/jquery.ui/1.9.2/jquery-ui.custom.min.js"}
  / The Iframe Transport is required for browsers without support for XHR file uploads
  %script{:src => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/js/jquery.iframe-transport.js"}
  / The basic File Upload plugin
  %script{:src => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/js/jquery.fileupload.js"}
  / The basic File Upload plugin
  %script{:src => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/js/jquery.fileupload-ui.js"}
  / The File Upload processing plugin
  %script{:src => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/js/jquery.fileupload-process.js"}
  / The File Upload validation plugin
  %script{:src => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/js/jquery.fileupload-validate.js"}
  / The File Upload Angular JS module
  %script{:src => "//cdn.jsdelivr.net/jquery.fileupload/8.8.2/js/jquery.fileupload-angular.js"}

  != javascript_tag "dashboard"

  :javascript
    mixpanel.alias("#{user.email}")

.container{"ng-controller" => "VersionsCtrl", "ng-init" => "init('" + appcast._id + "')"}
  .header
    %ul.nav.nav-pills.pull-right
      %li
        %a{:href => "/how-to-setup-self-updating-mac-app-in-5-minutes"} How to
      %li
        %a{:href => "/auth/logout"} Log out
    %h3.text-muted=settings.appname
  %hr/
  .row
    .col-md-8
      %div{ "ng-view" => "" }
    .col-md-4
      .panel.panel-info
        .panel-heading
          %h3.panel-title Step by step instructions
        .panel-body
          %p
            Hi, great to have you on board! To host you appcast all you need to do is follow this steps:
          %ol
            %li
              Download and bundle this special version of
              %a{:href => "http://github.com/pawelniewie/sparkle"} Sparkle
            %li
              Add it to your project
            %li
              Add this little helper to you build
            %li
              Before releasing run git tag -a version
            %li
              Build for Archiving
            %li
              Export the app (sign in with a Developer certificate)
            %li
              Run appcast upload with the app file
            %li
              Your appcast was updated and clients are getting the new version!
