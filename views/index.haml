  != stylesheet_tag "index"
- content_for(:scripts) do
  :javascript
    angular.module('appcasts', []);
    mixpanel.track("Home");

.container-narrow
  .header
    %ul.nav.nav-pills.pull-right
      %li.active
        %a{:href => "/"} Home
      %li
        %a{:href => "/how-to-setup-self-updating-mac-app-in-5-minutes"} How to
      %li
        %a{:href => "mailto:pawelniewiadomski@me.com"} Contact
    %h3.text-muted=settings.appname
